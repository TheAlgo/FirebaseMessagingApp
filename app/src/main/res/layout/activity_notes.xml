<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.firebase.udacity.friendlychat.NotesActivity">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="28dp"
        android:layout_alignParentRight="true"/>


    <com.github.florent37.animatedpencil.AnimatedPencil
        android:id="@+id/pencil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pencil_color="@android:color/white"
        android:elevation="6dp"
        app:layout_anchor="@id/floatingActionButton"
        app:layout_anchorGravity="center"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/floatingActionButton"
        android:layout_alignStart="@+id/floatingActionButton" />



</RelativeLayout>
